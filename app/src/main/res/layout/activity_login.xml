<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e293c">>


    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="250dp"
        android:textColor="#2c9dde"
        android:text="Username"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:id="@+id/textView2" />

    <EditText
        android:id="@+id/etUsername"
        android:layout_marginTop="265dp"
        android:textColor="#c6daec"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="315dp"
        android:textColor="#2c9dde"
        android:layout_centerHorizontal="true"
        android:text="Password"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/etPassword"
        android:textColor="#c6daec"
        android:layout_marginTop="330dp"
        android:layout_centerHorizontal="true"
        android:layout_width="150dp"
        android:inputType="textPassword"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/bLogin"
        android:text="Login"
        android:textColor="#2c9dde"
        android:background="#c6daec"
        android:layout_marginTop="380dp"
        android:layout_width="100dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="450dp"
        android:text="If you don't have an account yet"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="@+id/bLogin"
        android:id="@+id/textView" />
    <TextView
        android:id="@+id/tvRegisterLink"
        android:textColor="#19bbd5"
        android:layout_width="wrap_content"
        android:layout_marginTop="465dp"
        android:text="Register Here"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:layout_gravity="center_horizontal"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/imageView1"
        android:src="@drawable/logo"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="90dp"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
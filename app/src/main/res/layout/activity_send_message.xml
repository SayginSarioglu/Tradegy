<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0e293c"><![CDATA[>

    ]]>

    <Button
        android:id="@+id/bSendMessage"
        android:text="Send New Message"
        android:textColor="#2c9dde"
        android:background="#c6daec"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="174dp" />


    <Button
        android:id="@+id/bSeeMessage"
        android:text="See Messages"
        android:textColor="#2c9dde"
        android:background="#c6daec"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="106dp"
        android:layout_below="@+id/bSendMessage"
        android:layout_centerHorizontal="true" />

</RelativeLayout>